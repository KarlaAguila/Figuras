<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="31dp"
        android:fontFamily="sans-serif-black"
        android:text="Seleccione una figura para calcular area"
        android:textColor="#DD2C00"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rectangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="244dp"
        android:layout_marginTop="104dp"
        android:text="Rectangulo" />

    <Button
        android:id="@+id/circulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="103dp"
        android:text="Circulo" />

    <Button
        android:id="@+id/cuadrado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="143dp"
        android:text="Cuadrado" />

    <Button
        android:id="@+id/rombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rectangulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="257dp"
        android:layout_marginTop="141dp"
        android:text="Rombo" />

    <Button
        android:id="@+id/triangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cuadrado"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="141dp"
        android:text="Triangulo" />

    <Button
        android:id="@+id/trapecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rombo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="249dp"
        android:layout_marginTop="143dp"
        android:text="Trapecio" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/circulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="-98dp"
        app:srcCompat="@drawable/circulo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/rectangulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="225dp"
        android:layout_marginTop="-125dp"
        app:srcCompat="@drawable/rectangulo" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignTop="@+id/cuadrado"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="-122dp"
        app:srcCompat="@drawable/cuadrado" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="148dp"
        android:layout_height="120dp"
        android:layout_below="@+id/cuadrado"
        android:layout_alignBottom="@+id/triangulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="36dp"
        app:srcCompat="@drawable/triangulo" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/rectangulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="245dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/rombo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="171dp"
        android:layout_height="100dp"
        android:layout_below="@+id/rombo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="434dp"
        app:srcCompat="@drawable/trapecio" />


</RelativeLayout>